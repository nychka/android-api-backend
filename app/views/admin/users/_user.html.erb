<div class="ad-wrapper circle size_m">
  <div class="controls">
    <%= link_to '', edit_admin_user_path(user), class: 'glyphicon glyphicon-edit edit control-item' %>
    <%= link_to '', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-remove control-item delete pull-right' %>
  </div>
  <div class="ad">
    <%= image_tag(user.photo, class: 'undercover') %>
  </div>
  <%= link_to  [:admin, user] do %>
    <div class="title"><%=  user.first_name %></div>
  <% end %>
</div>