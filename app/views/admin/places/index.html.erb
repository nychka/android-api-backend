<h1>Listing places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Lng</th>
      <th>Lat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |admin_place| %>
      <tr>
        <td><%= admin_place.name %></td>
        <td><%= admin_place.phone %></td>
        <td><%= admin_place.address %></td>
        <td><%= admin_place.longitude %></td>
        <td><%= admin_place.latitude %></td>
        <td><%= link_to 'Show', [:admin, admin_place] %></td>
        <td><%= link_to 'Edit', edit_admin_place_path(admin_place) %></td>
        <td><%= link_to 'Destroy', [:admin, admin_place], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Place', new_admin_place_path %>
