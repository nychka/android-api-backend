<!-- show all ads-->
<% unless @ads.empty? %>
  <% @ads.each do |ad| %>
  <%= render partial: 'ad', locals: { ad: ad } %>
  <% end %>
<% else %>
  <!-- no ads found -->
<% end %>
<div class='clearfix'></div>

<%= render 'shared/pagination', items: @ads %>
<%= render 'shared/create_item', path: new_admin_ad_path %>

